<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/f5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <com.github.customview.MyImageView
                android:id="@+id/uiv_userinfo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                app:my_iv_radius="5dp"
                android:layout_gravity="center_vertical"
          />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户头像"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                ></TextView>
        </LinearLayout>


        <com.github.customview.MyLinearLayout
            android:id="@+id/ly_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:my_ll_bottom_line="true"
            app:my_ll_solid="@color/white">

            <com.github.customview.MyImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/my_setting" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:text="设置"
                  />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:src="@drawable/my_arrow_grey"
                />
        </com.github.customview.MyLinearLayout>

