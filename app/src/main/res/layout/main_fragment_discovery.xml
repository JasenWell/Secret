<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@color/seal_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text="@string/common_chat_room"
            android:textColor="@color/color_black_text"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/color_divider_line" />

    <com.xyp.mimi.im.ui.view.SettingItemView
        android:id="@+id/discovery_friend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seal_mine_setting_item_height"
        android:layout_marginTop="@dimen/seal_mine_setting_item_margin_top"
        app:item_content="朋友圈"
        app:item_right_image="@drawable/common_ic_arrow"
        app:item_image="@drawable/discovery_friend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <io.rong.imkit.widget.AsyncImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:RCCornerRadius="3dp"
                app:RCDefDrawable="@drawable/discovery_ic_chat_room_1"
                app:RCShape="square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_one"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <io.rong.imkit.widget.AsyncImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:RCCornerRadius="3dp"
                app:RCDefDrawable="@drawable/discovery_ic_chat_room_2"
                app:RCShape="square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_two"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <io.rong.imkit.widget.AsyncImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:RCCornerRadius="3dp"
                app:RCDefDrawable="@drawable/discovery_ic_chat_room_3"
                app:RCShape="square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_three"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_4"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <io.rong.imkit.widget.AsyncImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:RCCornerRadius="3dp"
                app:RCDefDrawable="@drawable/discovery_ic_chat_room_4"
                app:RCShape="square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_four"
                android:textColor="@color/color_black_text" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>