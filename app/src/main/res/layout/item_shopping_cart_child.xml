<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <com.github.customview.MyCheckBox
            android:id="@+id/cb_shopingcart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            app:my_checkbox_normal="@mipmap/circle_grey"
            app:my_checkbox_checked="@mipmap/circle_red"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            />
        <ImageView
            android:id="@+id/iv_shopingcart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/tv_shopingcart_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="按摩精油通经"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:id="@+id/tv_shopingcart_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    tools:text="大马士革玫瑰纯露125ml"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_shopingcart_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="¥92.00"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tv_shopingcart_unitprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="¥92.00"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:id="@+id/iv_shopingcart_jian2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="6dp"
                            android:src="@drawable/cart_jian"
                            />
                        <TextView
                            android:id="@+id/tv_shopingcart_num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="999"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:ems="2"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />
                        <ImageView
                            android:id="@+id/iv_shopingcart_jia2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="6dp"
                            android:src="@drawable/cart_jia"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>